# =============================================================================
# PORTFOLIO ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to `.env` and fill in your actual values
# Never commit your actual .env file to version control!

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite is used by default, no configuration needed
# For MySQL/PostgreSQL, uncomment and configure below:
# DATABASE_URL=mysql://username:password@localhost:3306/portfolio_db

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Required for contact form notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_gmail_app_password

# Alternative email providers:
# For SendGrid:
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your_sendgrid_api_key

# =============================================================================
# PUSH NOTIFICATIONS (Optional)
# =============================================================================
# Firebase Cloud Messaging for urgent contact message alerts
# Get these from: https://console.firebase.google.com/
FCM_SERVER_KEY=your_firebase_cloud_messaging_server_key
FCM_DEVICE_TOKEN=your_fcm_device_token_from_mobile_app

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# Spotify Integration (Optional - for music section)
# Get credentials from: https://developer.spotify.com/dashboard/
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/music/admin/spotify-callback/

# Google Gemini API (Optional - for AI chatbot)
# Get API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key

# TinyMCE Rich Text Editor (Optional)
# Get API key from: https://www.tiny.cloud/
TINYMCE_API_KEY=your_tinymce_api_key

# =============================================================================
# CACHING (Optional)
# =============================================================================
# Redis for caching and session storage
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
SITE_NAME=Your Portfolio Name
SITE_URL=http://localhost:8000

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# These should be set in production environments
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
